generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  projects      Project[]
}

model Project {
  id        String   @id @default(uuid())
  userId    String
  ProjectName      String
  description String?
  createdAt DateTime @default(now())

  templates             Template[]
  datasets              Dataset[]
  generatedCertificates GeneratedCertificate[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Template {
  id         String @id @default(uuid())
  projectId  String
  name       String
  fileUrl    String // the uploaded template url
  configJSON String // positioning of fields

  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  generatedCertificates GeneratedCertificate[]
}

model Dataset {
  id         String       @id @default(uuid())
  projectId  String
  name       String     // e.g., "Event Attendees"
  uploadedAt DateTime     @default(now())
  rows       DatasetRow[]

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model DatasetRow {
  id                    String                 @id @default(uuid())
  datasetId             String
  dataJSON              Json                 // e.g., { "name": "John Doe", "email": "
  dataset               Dataset                @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  generatedCertificates GeneratedCertificate[]
}

model GeneratedCertificate {
  id            String   @id @default(uuid())
  projectId     String
  templateId    String
  datasetRowId  String?

  name          String
  fileUrl       String
  qrData        String       // the data encoded into QR (usually URL)
  qrImageUrl    String       // stored QR code image file
  verified      Boolean      @default(false)
  generatedAt   DateTime     @default(now())

  project       Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  template      Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  datasetRow    DatasetRow? @relation(fields: [datasetRowId], references: [id], onDelete: SetNull)
}
