generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String

  Projects Project[]
}

model Project {
  id        String   @id @default(uuid())
  userId    String
  ProjectName      String
  createdAt DateTime @default(now())

  templates             Template[]
  datasets              Dataset[]
  generatedCertificates GeneratedCertificate[]

  user User @relation(fields: [userId], references: [id])
}

model Template {
  id         String @id @default(uuid())
  projectId  String
  name       String
  fileUrl    String // the uploaded template image OR PDF
  configJSON String // stores positioning of fields, font size etc

  project               Project                @relation(fields: [projectId], references: [id])
  generatedCertificates GeneratedCertificate[]
}

model Dataset {
  id         String       @id @default(uuid())
  projectId  String
  name       String // e.g "Hackathon Participants"
  uploadedAt DateTime     @default(now())
  rows       DatasetRow[]

  project Project @relation(fields: [projectId], references: [id])
}

model DatasetRow {
  id                    String                 @id @default(uuid())
  datasetId             String
  dataJSON              Json // { "name": "John", "score": "92", "rank": "1" }
  dataset               Dataset                @relation(fields: [datasetId], references: [id])
  generatedCertificates GeneratedCertificate[]
}

model GeneratedCertificate {
  id            String   @id @default(uuid())
  projectId     String
  templateId    String
  datasetRowId  String?

  name          String
  fileUrl       String
  qrData        String       // the data encoded into QR (usually URL)
  qrImageUrl    String       // stored QR code image file
  verified      Boolean      @default(false)
  generatedAt   DateTime     @default(now())

  project       Project @relation(fields: [projectId], references: [id])
  template      Template @relation(fields: [templateId], references: [id])
  datasetRow    DatasetRow? @relation(fields: [datasetRowId], references: [id])
}
